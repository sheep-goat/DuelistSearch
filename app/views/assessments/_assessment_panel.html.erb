<div id="assessment-panel">
  <div class="assessment-panel-inner">
    <div class="user-icon circle-medium">
      <% if post.user.image_path.url.present? %>
        <%= image_tag post.user.image_path.url %>
      <% end %>
    </div>
    <div class="username">
      <%= link_to post.user.nickname, user_show_path(post.user.username) %>
    </div>
    <%= link_to assessment_path(post.user.id) do %>
      <div class="assessments">
        <div class="assessment-inline">
          <i class="fas fa-grin-squint"></i>
          <span class="count good"><%= replace_nil(@assessments["good"]) %></span>
        </div>
        <div class="assessment-inline">
          <i class="fas fa-meh-blank"></i>
          <span class="count normal"><%= replace_nil(@assessments["normal"]) %></span>
        </div>
        <div class="assessment-inline">
          <i class="fas fa-sad-tear"></i>
          <span class="count bad"><%= replace_nil(@assessments["bad"]) %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>