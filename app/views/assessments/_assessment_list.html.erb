<div id="assessments-list">
  <% if assessments.present? %>
    <% assessments.each do |a| %>
      <div class="assessment list-item">
        <div class="list-item-inner">
          <div class="grade">
            <span class="grade-icon"><i class="fas <%= replace_icon(a[:grade]) %>"></i></span>
            <span class="grade-string"><%= a[:grade] %></span>
          </div>
          <div class="comment"><%= a[:comment] %></div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="assessment list-item">
      <div class="no-assessment">まだ評価がありません。</div>
    </div>
  <% end %>
</div>