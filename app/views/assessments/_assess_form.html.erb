<%= form_with model: @assessment, url: {controller: :assessments, action: :create}, local: true do |form| %>
  <div class="assess-form-inner">
    <div class="grade">
      <div class="radio-inline">
        <%= form.radio_button :grade, :good %>
        <%= form.label :good do %>
          <i class="fas fa-grin-squint"></i>
          <span>良い</span>
        <% end %>
      </div>
      <div class="radio-inline">
        <%= form.radio_button :grade, :normal %>
        <%= form.label :good do %>
          <i class="fas fa-meh-blank"></i>
          <span>普通</span>
        <% end %>
      </div>
      <div class="radio-inline">
        <%= form.radio_button :grade, :bad %>
        <%= form.label :good do %>
          <i class="fas fa-sad-tear"></i>
          <span>悪い</span>
        <% end %>
      </div>
    </div>
    <div class="assess-comment">
      <%= form.label :comment, 'コメント' %>
      <%= form.text_area :comment %>
    </div>
    <div class="post-button">
      <%= form.submit %>
    </div>
  </div>
<% end %>