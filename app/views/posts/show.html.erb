<%= @post.title %>
<%= @post.user.username %>
<%= @post.game.title %>
<%= render partial: 'favorites/favorite_form', :locals => { post: @post } %>
<%= render partial: 'comments/comment_form', :locals => { post: @post } %>
<% @comments.each do |comment| %>
  <div>
    <%= link_to comment.user.username, user_show_path(comment.user.username) %>
    <%= comment.message %>
    <hr>
  </div>
<% end %>