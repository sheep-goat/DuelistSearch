<div class="fav-link">
  <% if current_user.favorites.find_by(post_id: post.id) %>
    <%= link_to 'UNFAVORITE', unfavorite_path(current_user.username, post.id), method: :delete %>
  <% else %>
    <%= link_to 'FAVORITE', favorite_path(current_user.username,post.id), method: :post %>
  <% end %>
</div>