<div class="fav-link" id="fav-link-<%= post.id %>">
  <% if current_user.favorites.find_by(post_id: post.id) %>
    <%= link_to 'UNFAVORITE', unfavorite_path(current_user.username, post.id), method: :delete, remote: true %>
  <% else %>
    <%= link_to 'FAVORITE', favorite_path(current_user.username,post.id), method: :post, remote: true %>
  <% end %>
  <div class="total-favs">
    <span class="favs-count"><%= @fav_users %></span>
    <span class="favs-unit">件のおきにいり</span>
  </div>
</div>