<div class="part-link">
  <% if current_user.participators.find_by(post_id: post.id) %>
    <%= link_to 'LEAVE', leave_path(current_user.username, post.id),
                method: :delete, remote: true, data: { confirm: 'この対戦への参加をキャンセルします。よろしいですか?' } %>
  <% else %>
    <%= link_to 'JOIN', join_path(current_user.username,post.id),
                method: :post, remote: true, data: { confirm: 'この対戦に参加します。よろしいですか?' } %>
  <% end %>
  <div class="total-parts">
    <span class="parts-count"><%= @total_parts %></span>
    <span class="parts-unit">人</span>
  </div>
</div>